<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <shape>
            <gradient android:startColor="@color/RadioCheckedTop" android:endColor="@color/RadioCheckedBottom" android:angle="270.0" android:type="linear" android:centerX="0.5" android:centerY="0.2" android:centerColor="@color/RadioCheckedCenter" />
            <stroke android:width="0.5dip" android:color="@color/RadioBorder" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient android:startColor="@color/RadioNormalTop" android:endColor="@color/RadioNormalBottom" android:angle="270.0" android:type="linear" android:centerX="0.5" android:centerY="0.3" android:centerColor="@color/RadioNormalCenter" />
            <stroke android:width="0.5dip" android:color="@color/RadioBorder" />
        </shape>
    </item>
</selector>
