<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <RelativeLayout style="@style/df_title">
	        <Button android:id="@+id/btnBack" 
	            android:text="@string/strToSetting" 
	            style="@style/df_title_left_button" />
	        <TextView android:id="@+id/titleText" 
	            android:background="@null" 
	            android:text="" 
	            android:visibility="invisible" 
	            style="@style/df_title_text" />
	        <Button android:visibility="invisible"
	            android:id="@+id/btnOK"
	            android:text="@string/strOK" 
	            style="@style/df_title_right_button" />
    </RelativeLayout>
    
	    <TextView android:textSize="18sp" 
	        android:gravity="center" 
	        android:layout_width="match_parent" 
	        android:layout_height="wrap_content" 
	        android:text="@string/str_alarm_distance" />
	    
	    <LinearLayout android:layout_width="match_parent"
	        android:paddingLeft="10dp"
	        android:paddingRight="10dp"
	        android:layout_height="wrap_content">
	        <TextView android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:layout_weight="1"
	         	android:gravity="center"
	            android:text="@string/antiloss_distance_near"
	            android:textSize="18sp"/>
	       <TextView android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:layout_weight="1"
	         	android:gravity="center"
	            android:text="@string/default_antiloss_distance"
	            android:textSize="18sp"/>
	       <TextView android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:layout_weight="1"
	         	android:gravity="center"
	            android:text="@string/antiloss_distance_far"
	            android:textSize="18sp"/>
	    </LinearLayout>
	    
	    <LinearLayout android:layout_width="match_parent"
	        android:layout_height="40dp"
	        android:layout_marginTop="5dp"
	        android:paddingLeft="10dp"
	        android:paddingRight="10dp">
	        <LinearLayout android:layout_width="match_parent"
	            android:background="@color/black"
	            android:layout_height="match_parent">

				<RadioGroup android:id="@+id/alarmdistance_choose_picker"
				    android:layout_width="match_parent"
				    android:layout_height="match_parent"
				    android:orientation="horizontal">
				    <RadioButton android:id="@+id/alarmdistance_picker_near"
				        android:layout_width="match_parent"
				        android:layout_height="match_parent"
				        android:button="@null"
				        android:layout_weight="1"
				        android:background="@drawable/alarmdistance_picker_background"
				        />
				    <RadioButton android:id="@+id/alarmdistance_picker_normal"
				        android:layout_width="match_parent"
				        android:layout_height="match_parent"
				        android:layout_weight="1"
				        android:button="@null"
				        android:checked="true"
				        android:background="@drawable/alarmdistance_picker_background"
				        />
					<RadioButton android:id="@+id/alarmdistance_picker_far"
				        android:layout_width="match_parent"
				        android:layout_weight="1"
				        android:button="@null"
				        android:layout_height="match_parent"
				        android:background="@drawable/alarmdistance_picker_background"
				        />
				</RadioGroup>
	        </LinearLayout>
	    </LinearLayout>
</LinearLayout>
